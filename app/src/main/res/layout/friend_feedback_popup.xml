<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/RatingBar"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="0"
        android:max="5"/>

    <CheckBox
        android:id="@+id/party_guy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Party Guy"/>

    <CheckBox
        android:id="@+id/funny_guy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Funny Guy"/>

    <CheckBox
        android:id="@+id/adventurous_guy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Adventurous Guy"/>

    <CheckBox
        android:id="@+id/nerd_guy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Nerd Guy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/send_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="SUBMIT"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cancel_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="CANCEL"
            android:background="@color/light_gray"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>